<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/color_full_white"
    android:elevation="20dp"
    android:padding="@dimen/margin_medium"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_margin="@dimen/margin_medium_2"
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_regular"
            android:text="Done"/>

        <TextView
            android:id="@+id/tv_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_status"
            android:text="Contact Page"
            android:textColor="@color/color_text"/>
        <TextView
            android:id="@+id/tv_design"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Design"/>
        <com.et.padc_x_customassignment_eh.views.components.RoundedCornerImageView
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_below="@id/tv_design"
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cornerRadius="30dp"
            app:srcCompat="@drawable/profile3"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>